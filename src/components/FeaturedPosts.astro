---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const featuredPosts = posts.slice(0, 3);
---

<section class="section-padding">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">Featured Articles</h2>
      <p class="text-xl text-dark-text-secondary max-w-2xl mx-auto">
        Latest insights and tutorials on AI, machine learning, and automation technologies
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredPosts.map((post) => (
        <article class="card group hover:scale-105 transition-transform duration-200">
          <div class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg mb-4 flex items-center justify-center">
            <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          
          <div class="space-y-3">
            <div class="flex items-center space-x-2 text-sm">
              <span class="bg-primary/10 text-primary px-2 py-1 rounded-full">
                {post.data.category || 'AI'}
              </span>
              <span class="text-dark-text-secondary">
                {post.data.publishDate ? new Date(post.data.publishDate).toLocaleDateString('id-ID') : ''}
              </span>
            </div>
            
            <h3 class="text-xl font-semibold text-dark-text group-hover:text-primary transition-colors">
              <a href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h3>
            
            <p class="text-dark-text-secondary line-clamp-3">
              {post.data.description}
            </p>
            
            <a 
              href={`/blog/${post.slug}`}
              class="inline-flex items-center text-primary hover:text-primary-400 font-medium"
            >
              Read More 
              <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/blog" class="btn-primary">View All Articles</a>
    </div>
  </div>
</section>