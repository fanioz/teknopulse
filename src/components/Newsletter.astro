<section class="section-padding">
  <div class="max-w-4xl mx-auto">
    <div class="card text-center bg-gradient-to-r from-primary/10 to-secondary/10 border-primary/20">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-black mb-4">Stay Updated</h2>
        <p class="text-black mb-8">
          Dapatkan artikel terbaru tentang AI, machine learning, dan automation langsung di inbox Anda. 
          Tidak ada spam, hanya konten berkualitas tinggi.
        </p>

        <form class="flex flex-col sm:flex-row gap-4" id="newsletter-form">
          <div class="flex-1">
            <label for="email" class="sr-only">Email address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Enter your email address"
              class="w-full px-4 py-3 bg-dark-surface border border-dark-border rounded-lg text-dark-text placeholder-dark-text-secondary focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-colors"
            />
          </div>
          <button
            type="submit"
            class="btn-primary whitespace-nowrap"
          >
            Subscribe Now
          </button>
        </form>

        <p class="text-sm text-black mt-4">
          Join 5,000+ subscribers who trust our AI insights. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('newsletter-form') as HTMLFormElement;
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const email = formData.get('email') as string;
    
    // Simulate subscription success
    alert(`Thank you for subscribing with ${email}! Check your email for confirmation.`);
    form.reset();
  });
</script>