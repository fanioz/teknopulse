---
const services = [
  {
    title: 'AI Strategy Consulting',
    description: 'Membantu bisnis mengembangkan strategi AI yang tepat untuk transformasi digital dan peningkatan efisiensi.',
    icon: 'brain',
    features: ['AI Roadmap Development', 'Technology Assessment', 'ROI Analysis']
  },
  {
    title: 'Process Automation',
    description: 'Implementasi solusi otomasi untuk mengoptimalkan workflow dan mengurangi pekerjaan manual yang repetitif.',
    icon: 'cog',
    features: ['Workflow Optimization', 'RPA Implementation', 'Integration Solutions']
  },
  {
    title: 'Machine Learning Solutions',
    description: 'Pengembangan model ML custom untuk prediksi, klasifikasi, dan analisis data yang actionable.',
    icon: 'chart',
    features: ['Predictive Analytics', 'Custom ML Models', 'Data Pipeline Design']
  },
  {
    title: 'AI Training & Education',
    description: 'Program pelatihan komprehensif untuk tim dan organisasi yang ingin menguasai teknologi AI.',
    icon: 'academic',
    features: ['Corporate Training', 'Workshop & Seminars', 'Certification Programs']
  }
];

const getIcon = (iconName: string) => {
  const icons = {
    brain: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
    cog: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
    chart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
    academic: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />`
  };
  return icons[iconName as keyof typeof icons] || icons.brain;
};
---

<section class="section-padding bg-dark-surface/50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-dark-text mb-4">AI & Automation Services</h2>
      <p class="text-xl text-dark-text-secondary max-w-3xl mx-auto">
        Solusi komprehensif untuk transformasi digital dengan teknologi AI dan otomasi yang terdepan
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {services.map((service) => (
        <div class="card group">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-r from-primary to-secondary rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={getIcon(service.icon)} />
                </svg>
              </div>
            </div>
            
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-dark-text mb-2">{service.title}</h3>
              <p class="text-dark-text-secondary mb-4">{service.description}</p>
              
              <ul class="space-y-1">
                {service.features.map((feature) => (
                  <li class="flex items-center text-sm text-dark-text-secondary">
                    <svg class="w-4 h-4 text-primary mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/contact" class="btn-primary">Get Started Today</a>
    </div>
  </div>
</section>