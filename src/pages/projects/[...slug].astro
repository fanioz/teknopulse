---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get related projects
const allProjects = await getCollection('projects');
const relatedProjects = allProjects
  .filter(project => 
    project.slug !== entry.slug && 
    project.data.category === entry.data.category
  )
  .slice(0, 2);
---

<MainLayout 
  title={entry.data.title}
  description={entry.data.description}
>
  <article class="section-padding">
    <div class="max-w-5xl mx-auto">
      <!-- Project Header -->
      <header class="mb-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm">
            <li><a href="/" class="text-dark-text-secondary hover:text-primary">Home</a></li>
            <li class="text-dark-text-secondary">/</li>
            <li><a href="/projects" class="text-dark-text-secondary hover:text-primary">Projects</a></li>
            <li class="text-dark-text-secondary">/</li>
            <li class="text-primary">{entry.data.title}</li>
          </ol>
        </nav>

        <!-- Project Image -->
        <div class="aspect-video bg-gradient-to-br from-primary/30 to-secondary/30 rounded-xl mb-8 flex items-center justify-center relative overflow-hidden">
          <svg class="w-24 h-24 text-white z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20"></div>
        </div>

        <!-- Meta Info -->
        <div class="mb-6">
          <div class="flex flex-wrap items-center gap-4 mb-4">
            <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">
              {entry.data.category}
            </span>
            <span class="text-dark-text-secondary">
              {entry.data.publishDate.toLocaleDateString('id-ID', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </span>
          </div>
          
          {entry.data.tags && (
            <div class="flex flex-wrap gap-2">
              {entry.data.tags.map(tag => (
                <span class="text-xs bg-dark-surface text-dark-text-secondary px-3 py-1 rounded-full border border-dark-border">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>

        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl font-bold text-dark-text mb-6 leading-tight">
          {entry.data.title}
        </h1>

        <!-- Description -->
        <p class="text-xl text-dark-text-secondary mb-8 leading-relaxed">
          {entry.data.description}
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-wrap gap-4 pb-8 border-b border-dark-border">
          {entry.data.demoUrl && (
            <a 
              href={entry.data.demoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View Live Demo
            </a>
          )}

          {entry.data.githubUrl && (
            <a 
              href={entry.data.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Source Code
            </a>
          )}

          <a 
            href="/contact"
            class="inline-flex items-center px-6 py-3 border border-dark-border rounded-lg text-dark-text hover:bg-dark-surface hover:border-primary transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Discuss Project
          </a>
        </div>
      </header>

      <!-- Project Content -->
      <div class="prose prose-lg prose-invert max-w-none mb-12">
        <Content />
      </div>

      <!-- Project Footer -->
      <footer class="border-t border-dark-border pt-8 mb-12">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <!-- Share Buttons -->
          <div class="flex items-center space-x-4">
            <span class="text-dark-text font-medium">Share:</span>
            <a 
              href={`https://twitter.com/intent/tweet?text=Check out this AI project: ${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          </div>

          <!-- Back to Projects -->
          <a 
            href="/projects"
            class="inline-flex items-center text-primary hover:text-primary-400 font-medium"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Projects
          </a>
        </div>
      </footer>
    </div>
  </article>

  <!-- Related Projects -->
  {relatedProjects.length > 0 && (
    <section class="section-padding bg-dark-surface/50">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold text-dark-text mb-8 text-center">Related Projects</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {relatedProjects.map((project) => (
            <article class="card group hover:scale-105 transition-transform duration-200">
              <div class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg mb-4 flex items-center justify-center">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>
              
              <div class="space-y-3">
                <div class="text-sm">
                  <span class="bg-primary/10 text-primary px-2 py-1 rounded-full">
                    {project.data.category}
                  </span>
                </div>
                
                <h3 class="text-xl font-semibold text-dark-text group-hover:text-primary transition-colors">
                  <a href={`/projects/${project.slug}`}>
                    {project.data.title}
                  </a>
                </h3>
                
                <p class="text-dark-text-secondary line-clamp-2">
                  {project.data.description}
                </p>
                
                <a 
                  href={`/projects/${project.slug}`}
                  class="inline-flex items-center text-primary hover:text-primary-400 font-medium"
                >
                  View Project
                  <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>