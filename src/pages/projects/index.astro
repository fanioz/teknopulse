---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

const allProjects = await getCollection('projects');
const projects = allProjects.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const categories = [...new Set(projects.map(project => project.data.category))];
const featuredProjects = projects.filter(project => project.data.featured);
---

<MainLayout 
  title="Projects - AI Edu-Blog"
  description="Showcase AI dan automation projects, case studies, dan implementasi teknologi terdepan untuk solusi bisnis."
>
  <section class="section-padding">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-dark-text mb-4">Projects</h1>
        <p class="text-xl text-dark-text-secondary max-w-2xl mx-auto">
          Real-world AI dan automation projects yang telah dikembangkan untuk menyelesaikan berbagai business challenges
        </p>
      </div>

      <!-- Featured Projects -->
      {featuredProjects.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-dark-text mb-8">Featured Projects</h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {featuredProjects.map((project) => (
              <div class="card group hover:scale-[1.02] transition-transform duration-300 bg-gradient-to-br from-primary/5 to-secondary/5 border-primary/20">
                <!-- Project Image -->
                <div class="aspect-video bg-gradient-to-br from-primary/30 to-secondary/30 rounded-lg mb-6 flex items-center justify-center relative overflow-hidden">
                  <svg class="w-16 h-16 text-white z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                  <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20 opacity-60"></div>
                  <div class="absolute top-4 right-4">
                    <span class="bg-secondary text-white px-2 py-1 rounded-full text-xs font-medium">
                      Featured
                    </span>
                  </div>
                </div>

                <div class="space-y-4">
                  <!-- Category & Date -->
                  <div class="flex items-center justify-between text-sm">
                    <span class="bg-primary/10 text-primary px-3 py-1 rounded-full font-medium">
                      {project.data.category}
                    </span>
                    <span class="text-dark-text-secondary">
                      {project.data.publishDate.toLocaleDateString('id-ID')}
                    </span>
                  </div>

                  <!-- Title & Description -->
                  <div>
                    <h3 class="text-2xl font-bold text-dark-text mb-3 group-hover:text-primary transition-colors">
                      <a href={`/projects/${project.slug}`}>
                        {project.data.title}
                      </a>
                    </h3>
                    <p class="text-dark-text-secondary leading-relaxed">
                      {project.data.description}
                    </p>
                  </div>

                  <!-- Tags -->
                  {project.data.tags && (
                    <div class="flex flex-wrap gap-2">
                      {project.data.tags.slice(0, 4).map(tag => (
                        <span class="text-xs bg-dark-surface text-dark-text-secondary px-2 py-1 rounded border border-dark-border">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}

                  <!-- Action Buttons -->
                  <div class="flex items-center space-x-4 pt-4">
                    <a 
                      href={`/projects/${project.slug}`}
                      class="inline-flex items-center text-primary hover:text-primary-400 font-medium group"
                    >
                      View Details
                      <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>

                    {project.data.demoUrl && (
                      <a 
                        href={project.data.demoUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center text-secondary hover:text-secondary-400 font-medium"
                      >
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                        Live Demo
                      </a>
                    )}

                    {project.data.githubUrl && (
                      <a 
                        href={project.data.githubUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center text-dark-text-secondary hover:text-dark-text font-medium"
                      >
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        Code
                      </a>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- All Projects -->
      <div class="mb-12">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
          <h2 class="text-2xl font-bold text-dark-text mb-4 md:mb-0">All Projects</h2>
          
          <!-- Category Filter -->
          <div>
            <select
              id="category-filter"
              class="px-4 py-2 bg-dark-surface border border-dark-border rounded-lg text-dark-text focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
            >
              <option value="">All Categories</option>
              {categories.map(category => (
                <option value={category}>{category}</option>
              ))}
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
          {projects.map((project) => (
            <div class="card group hover:scale-105 transition-transform duration-200" data-category={project.data.category}>
              <!-- Project Image -->
              <div class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg mb-4 flex items-center justify-center">
                <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>

              <div class="space-y-3">
                <!-- Category & Date -->
                <div class="flex items-center justify-between text-sm">
                  <span class="bg-primary/10 text-primary px-2 py-1 rounded-full">
                    {project.data.category}
                  </span>
                  <span class="text-dark-text-secondary">
                    {project.data.publishDate.toLocaleDateString('id-ID')}
                  </span>
                </div>

                <!-- Title -->
                <h3 class="text-lg font-semibold text-dark-text group-hover:text-primary transition-colors">
                  <a href={`/projects/${project.slug}`}>
                    {project.data.title}
                  </a>
                </h3>

                <!-- Description -->
                <p class="text-dark-text-secondary text-sm line-clamp-3">
                  {project.data.description}
                </p>

                <!-- Tags -->
                {project.data.tags && (
                  <div class="flex flex-wrap gap-1">
                    {project.data.tags.slice(0, 3).map(tag => (
                      <span class="text-xs bg-dark-surface text-dark-text-secondary px-2 py-1 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Actions -->
                <div class="flex items-center justify-between pt-2">
                  <a 
                    href={`/projects/${project.slug}`}
                    class="inline-flex items-center text-primary hover:text-primary-400 text-sm font-medium"
                  >
                    Learn More
                    <svg class="w-3 h-3 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>

                  <div class="flex items-center space-x-2">
                    {project.data.demoUrl && (
                      <a 
                        href={project.data.demoUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-dark-text-secondary hover:text-primary transition-colors"
                        title="Live Demo"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </a>
                    )}

                    {project.data.githubUrl && (
                      <a 
                        href={project.data.githubUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-dark-text-secondary hover:text-primary transition-colors"
                        title="GitHub Repository"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-dark-surface/50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-dark-text mb-4">Interested in Collaboration?</h2>
      <p class="text-dark-text-secondary mb-8 text-lg">
        Looking untuk mengembangkan AI solution untuk bisnis Anda? Let's discuss your project requirements.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary">
          Start a Project
        </a>
        <a href="/blog" class="btn-secondary">
          Read Our Blog
        </a>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Filter functionality
  const categoryFilter = document.getElementById('category-filter');
  const projectsGrid = document.getElementById('projects-grid');
  const projects = Array.from(projectsGrid?.children || []);

  function filterProjects() {
    const selectedCategory = categoryFilter?.value || '';

    projects.forEach(project => {
      const category = project.getAttribute('data-category') || '';
      
      if (!selectedCategory || category === selectedCategory) {
        project.style.display = 'block';
      } else {
        project.style.display = 'none';
      }
    });
  }

  categoryFilter?.addEventListener('change', filterProjects);
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
</MainLayout>