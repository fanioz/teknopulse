---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => 
    post.slug !== entry.slug && 
    post.data.category === entry.data.category &&
    !post.data.draft
  )
  .slice(0, 3);
---

<MainLayout 
  title={entry.data.title}
  description={entry.data.description}
>
  <article class="section-padding">
    <div class="max-w-4xl mx-auto">
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm">
            <li><a href="/" class="text-dark-text-secondary hover:text-primary">Home</a></li>
            <li class="text-dark-text-secondary">/</li>
            <li><a href="/blog" class="text-dark-text-secondary hover:text-primary">Blog</a></li>
            <li class="text-dark-text-secondary">/</li>
            <li class="text-primary">{entry.data.title}</li>
          </ol>
        </nav>

        <!-- Category -->
        <div class="mb-4">
          <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">
            {entry.data.category}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl font-bold text-dark-text mb-6 leading-tight">
          {entry.data.title}
        </h1>

        <!-- Description -->
        <p class="text-xl text-dark-text-secondary mb-8 leading-relaxed">
          {entry.data.description}
        </p>

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center gap-6 pb-8 border-b border-dark-border">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-dark-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="text-dark-text-secondary">{entry.data.author}</span>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-dark-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time class="text-dark-text-secondary">
              {entry.data.publishDate.toLocaleDateString('id-ID', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>

          {entry.data.tags && (
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-dark-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              <div class="flex flex-wrap gap-2">
                {entry.data.tags.map(tag => (
                  <span class="text-xs bg-dark-surface text-dark-text-secondary px-2 py-1 rounded">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </header>

      <!-- Article Content -->
      <div class="prose prose-lg prose-invert max-w-none mb-12">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="border-t border-dark-border pt-8 mb-12">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <!-- Share Buttons -->
          <div class="flex items-center space-x-4">
            <span class="text-dark-text font-medium">Share:</span>
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-dark-text-secondary hover:text-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          </div>

          <!-- Back to Blog -->
          <a 
            href="/blog"
            class="inline-flex items-center text-primary hover:text-primary-400 font-medium"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Blog
          </a>
        </div>
      </footer>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="section-padding bg-dark-surface/50">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold text-dark-text mb-8 text-center">Related Articles</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedPosts.map((post) => (
            <article class="card group hover:scale-105 transition-transform duration-200">
              <div class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              
              <div class="space-y-3">
                <div class="text-sm">
                  <span class="bg-primary/10 text-primary px-2 py-1 rounded-full">
                    {post.data.category}
                  </span>
                </div>
                
                <h3 class="text-lg font-semibold text-dark-text group-hover:text-primary transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-dark-text-secondary text-sm line-clamp-2">
                  {post.data.description}
                </p>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary hover:text-primary-400 text-sm font-medium"
                >
                  Read More
                  <svg class="w-3 h-3 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>